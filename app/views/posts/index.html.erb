
<div id='main'>

    <div id="list-posts">
        <% @categories.each do |c| %>
          <p class='list-post-title'>
              > <%= link_to c.name, category_path(c) %>
          </p>
        <% end %>
    </div>

    <div id="posts-container">
        <div id="column">
          <% @posts.each do |post| %>

            <div id="post">
              <a href="<%= post_path(post) %>" class="post-content">
                    <figure>
                      <figcaption>
                        <% if !post.image.blank? %>
                          <%= image_tag(post.image) %>
                        <% elsif !post.video.blank? %>
                        <iframe width="560" height="315" src="<%= post.video.gsub(/watch\?v=/, "embed/") %>" frameborder="0" allowfullscreen>
                          <p>La vid√©o ne se charge pas, veuillez actualisez la page !</p>
                        </iframe>
                        <% else %>
                          <p></p>
                        <% end %>
                      </figcaption>
                      
                      <p id="titre"><%=post.title %></p><br>
                      <p id="article"><%= post.description %></p><br>
                  </figure>
                </a>
              </div>
            <% end %>
        </div>
    </div>

</div>
