<div id='post-show'>
    <p id="img-show">
        <% if !@post.image.blank? %>
        <%= image_tag(@post.image) %>
        <% elsif !@post.video.blank? %>
        <iframe width="560" height="315" src="<%= @post.video.gsub(/watch\?v=/, " embed/") %>" frameborder="0" allowfullscreen>
            <p>La vid√©o ne se charge pas, veuillez actualisez la page !</p>
        </iframe>
        <%else%>
        <p></p>
        <% end %>

        <% if !@post.title.blank? %>
        <p id="titreshow">
            <strong><%= @post.title %></strong>
        </p>
        <%else%>
        <p></p>
        <%end%>

        <% if !@post.description.blank? %>
        <p id="descriptionshow">
            <em><%= @post.description %></em>
        </p>
    <% else %>
        <p></p>
        <% end %>
    </p>

</div>

